<%- title_content "Image" -%>

<fieldset class="form_container">
  <%= legend_tag "Details" -%>

  <div class="form_column">

    <fieldset>
      <label>Name:</label><br />
      <div class="faux_field"><%=h @image_asset.name -%></div>
    </fieldset>
    <fieldset>
      <label>Description:</label><br />
      <div class="faux_field"><%=h @image_asset.description -%></div>
    </fieldset>
    <fieldset>
      <label>File name:</label><br />
      <div class="faux_field"><%=h @image_asset.media_file_name -%></div>
    </fieldset>
    <fieldset>
      <label>URL:</label><br />
      <div class="faux_field"><%=h MediaAsset.canonical_url(@image_asset.media.url) -%></div>
    </fieldset>
    <fieldset>
      <label>Content type:</label><br />
      <div class="faux_field"><%=h @image_asset.media_content_type -%></div>
    </fieldset>
    <fieldset>
      <label>File size:</label><br />
      <div class="faux_field"><%=h number_to_human_size(@image_asset.media_file_size) -%></div>
    </fieldset>
    <fieldset>
      <label>Updated at:</label><br />
      <div class="faux_field"><%=h @image_asset.media_updated_at ? @image_asset.media_updated_at.to_s(:short_date_time) : '' -%></div>
    </fieldset>

  </div>
  
  <div class="form_column">
    <%- if @image_asset && @image_asset.media_file_name -%>
      <div class="media_preview">
        <%= image_tag @image_asset.media.url(:thumbnail), :class => :media_thumbnail -%>
        <p class="media_caption"><%= @image_asset.media_file_name -%></p>
      </div>
    <%- end -%>
  </div>

</fieldset>

<%= link_to 'Edit', edit_image_asset_path(@image_asset), :class => 'button' -%>
<%= link_to 'Back to Media Assets', media_assets_path, :class => 'button' -%>
